{
    "name": "tech-review-checker",
    "type": "module",
    "version": "1.0.0",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "lint:code": "concurrently \"pnpm astro check\" \"pnpm oxlint\"",
        "lint:styles": "stylelint **/*.{css,scss,svelte}",
