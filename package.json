{
    "name": "tech-review-checker",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint:code": "pnpm oxlint --ignore-path .gitignore",
        "lint:styles": "stylelint **/*.{css,scss} --ignore-path .gitignore",
        "lint": "concurrently \"tsgo --noEmit\" \"pnpm lint:code\" \"pnpm lint:styles\"",
        "format": "concurrently \"pnpm:lint:code --fix\" \"pnpm:lint:styles --fix\"",
        "prepare": "husky || true"
    },
    "dependencies": {
        "@tanstack/react-query": "^5.90.5",
        "@tanstack/react-router": "^1.133.27",
        "classnames": "^2.5.1",
        "normalize.css": "^8.0.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "redaxios": "^0.5.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@tanstack/react-query-devtools": "^5.90.2",
        "@tanstack/react-router-devtools": "^1.133.27",
        "@types/node": "^24.9.1",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@typescript/native-preview": "7.0.0-dev.20251024.1",
        "@vitejs/plugin-react": "^5.1.0",
        "concurrently": "^9.2.1",
        "husky": "^9.1.7",
        "oxlint": "^1.24.0",
        "oxlint-tsgolint": "^0.3.0",
        "postcss": "^8.5.6",
        "postcss-html": "^1.8.0",
        "sass-embedded": "^1.93.2",
        "stylelint": "^16.25.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended-scss": "^16.0.2",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-order": "^7.0.0",
        "stylelint-scss": "^6.12.1",
        "typescript": "~5.9.3",
        "vite": "npm:rolldown-vite@7.1.14",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "pnpm": {
        "overrides": {
            "vite": "npm:rolldown-vite@7.1.14"
        }
    }
}
