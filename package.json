        "analyze": "serve ./.sonda",
        "prepare": "husky || true"
    },
    "dependencies": {
        "@astrojs/svelte": "^7.1.0",
        "@astrojs/vercel": "^8.2.0",
        "@tailwindcss/vite": "^4.1.11",
